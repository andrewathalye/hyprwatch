with "dbusada";
with "gnatcoll";

project hyprwatch is

   for Exec_Dir use ".";
   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Main use ("hyprwatch.adb");

   package Compiler is
      for Default_Switches ("Ada") use ("-g", "-Og");
   end Compiler;

   package Binder is
      for Default_Switches ("Ada") use ("-Es");
   end Binder;

end hyprwatch;
